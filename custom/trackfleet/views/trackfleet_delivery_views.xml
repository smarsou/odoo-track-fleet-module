<?xml version="1.0"?>
<odoo>

    <record id="trackfleet_delivery_view_form" model="ir.ui.view">
        <field name="name">trackfleet.delivery.form</field>
        <field name="model">trackfleet.delivery</field>
        <field name="arch" type="xml">
            <form string="Delivery Information">
                <sheet>
                    <h1>Delivery for <field name="customer_id" readonly="1"/> on <field name="planned_date" readonly="1"/> </h1>
                    <br/>
                    <group>
                        <field name="truck_id"/>
                        <field name="planned_date"/>
                        <field name="status"/>
                        <field name="weight_t"/>
                    </group>
                    <group>
                        <field name="customer_id"/>
                        <field name="delivery_date"/>
                        <field name="destination_address"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="trackfleet_delivery_view_list" model="ir.ui.view">
        <field name="name">trackfleet.delivery.list</field>
        <field name="model">trackfleet.delivery</field>
        <field name="arch" type="xml">
            <list string="Deliveries">
                <field name="customer_id"/>
                <field name="planned_date"/>
                <field name="status"/>
                <field name="destination_address"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="trackfleet_delivery_view_kanban" model="ir.ui.view">
        <field name="name">trackfleet.delivery.kanban</field>
        <field name="model">trackfleet.delivery</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <h3><field name="customer_id"/></h3>
                            <div><strong>Planned Date:</strong> <field name="planned_date"/></div>
                            <div t-if="record.status.raw_value == 'in_progress'">
                                <strong>Truck</strong> : <field name="truck_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="trackfleet_delivery_action" model="ir.actions.act_window">
        <field name="name">Deliveries</field>
        <field name="res_model">trackfleet.delivery</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>
